extends authorization

block content
  h1 Sign Up

  form(method='POST' action='')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text' placeholder='Username' name='username' required='true' value=(undefined===username ? '' : username) )
      label(for='password') Password:
      input#password.form-control(type='text' placeholder='Password' name='password' required='true' )
      label(for='password_confirm') Confirm password:
      input#password_confirm.form-control(type='text' placeholder='password_confirm' name='password_confirm' required='true' )
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg